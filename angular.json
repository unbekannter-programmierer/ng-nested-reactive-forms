{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "defaultProject": "samples",
  "projects": {
    "samples": {
      "root": "",
      "sourceRoot": "src",
      "projectType": "application",
      "prefix": "app",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:browser",
          "options": {
            "outputPath": "dist/ng-nrforms-samples",
            "index": "src/samples/index.html",
            "main": "src/samples/main.ts",
            "tsConfig": "src/samples/tsconfig.app.json",
            "polyfills": "src/samples/polyfills.ts",
            "assets": [
              "src/samples/assets",
              "src/samples/favicon.ico"
            ],
            "styles": [
              "src/samples/styles.scss"
            ],
            "scripts": []
          },
          "configurations": {
            "production": {
              "optimization": true,
              "outputHashing": "all",
              "sourceMap": false,
              "extractCss": true,
              "namedChunks": false,
              "aot": true,
              "extractLicenses": true,
              "vendorChunk": false,
              "buildOptimizer": true,
              "fileReplacements": [
                {
                  "replace": "src/samples/environments/environment.ts",
                  "with": "src/samples/environments/environment.prod.ts"
                }
              ]
            }
          }
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "options": {
            "browserTarget": "samples:build"
          },
          "configurations": {
            "production": {
              "browserTarget": "samples:build:production"
            }
          }
        },
        "extract-i18n": {
          "builder": "@angular-devkit/build-angular:extract-i18n",
          "options": {
            "browserTarget": "samples:build"
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "main": "src/samples/test.ts",
            "karmaConfig": "./karma.conf.js",
            "polyfills": "src/samples/polyfills.ts",
            "tsConfig": "src/samples/tsconfig.spec.json",
            "scripts": [],
            "styles": [
              "src/samples/styles.scss"
            ],
            "assets": [
              "src/samples/assets",
              "src/samples/favicon.ico"
            ]
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": [
              "src/samples/tsconfig.app.json",
              "src/samples/tsconfig.spec.json"
            ],
            "exclude": [
              "**/node_modules/**"
            ]
          }
        }
      }
    },
    "samples-e2e": {
      "root": "",
      "sourceRoot": "",
      "projectType": "application",
      "architect": {
        "e2e": {
          "builder": "@angular-devkit/build-angular:protractor",
          "options": {
            "protractorConfig": "./protractor.conf.js",
            "devServerTarget": "samples:serve"
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": [
              "e2e/tsconfig.e2e.json"
            ],
            "exclude": [
              "**/node_modules/**"
            ]
          }
        }
      }
    },
    "ng-nrforms": {
      "root": "projects/ng-nrforms",
      "sourceRoot": "projects/ng-nrforms/src",
      "projectType": "library",
      "prefix": "nrf",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-ng-packagr:build",
          "options": {
            "tsConfig": "projects/ng-nrforms/tsconfig.lib.json",
            "project": "projects/ng-nrforms/ng-package.json",
            "progress": false,
            "aot": true
          },
          "configurations": {
            "production": {
              "project": "projects/ng-nrforms/ng-package.prod.json"
            }
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "main": "projects/ng-nrforms/src/test.ts",
            "tsConfig": "projects/ng-nrforms/tsconfig.spec.json",
            "karmaConfig": "projects/ng-nrforms/karma.conf.js",
            "progress": false,
            "codeCoverage": true
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": [
              "projects/ng-nrforms/tsconfig.lib.json",
              "projects/ng-nrforms/tsconfig.spec.json"
            ],
            "exclude": [
              "**/node_modules/**"
            ]
          }
        }
      }
    }
  },
  "schematics": {
    "@schematics/angular:component": {
      "styleext": "scss"
    },
    "@schematics/angular:directive": {
    }
  }
}
